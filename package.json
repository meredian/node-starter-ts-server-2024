{
  "name": "k2-backend",
  "version": "1.0.0",
  "description": "Kinfolk 2.0 Backend",
  "main": "src/index.ts",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=22.10.0"
  },
  "scripts": {
    "dev": "nodemon | pino-pretty",
    "start": "npm run build && node dist/index.js",
    "build": "rm -rf dist && tsc && tsc-alias",
    "lint": "prettier --check . && eslint src/ --max-warnings=0 && tsc --noEmit ",
    "lint:fix": "prettier --write . ;  eslint src/ --fix; tsc --noEmit",
    "test": "ENV=${ENV:=test} jest ./src",
    "db:wait": "./scripts/tsnode.sh src/bin/db/wait-db.ts",
    "db:reset": "./scripts/tsnode.sh src/bin/db/reset-db.ts"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "rootDir": "./",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "modulePaths": [
      "<rootDir>/src"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@swc/core": "^1.7.40",
    "@swc/jest": "^0.2.36",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.1",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  },
  "dependencies": {
    "@types/clone": "^2.1.4",
    "@types/lodash": "^4.17.12",
    "clone": "^2.1.2",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.3",
    "envalid": "^8.0.0",
    "lodash": "^4.17.21",
    "pg": "^8.13.1",
    "pg-connection-string": "^2.7.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0"
  }
}
